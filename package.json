{
  "name": "mora-jai-online",
  "version": "1.0.0",
  "description": "A web application for playing the Mora Jai boxes from the game Blue Prince",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w frontend",
    "build": "npm run build -w frontend",
    "test": "npm test -w frontend",
    "lint": "npm run lint -w frontend",
    "clean": "rimraf packages/*/node_modules packages/*/dist",
    "docker:build": "docker compose build",
    "docker:start": "docker compose up --build -d",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v && docker system prune -f"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "rimraf": "^5.0.5"
  }
}
